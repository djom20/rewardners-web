<h1>Listing categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= l category.created_at %></td>
        <td><%= l category.updated_at %></td>
        <td><%= category.icon %></td>
        <td><%= link_to 'Show', category %></td>
        <% if category.branch? %>
        <td><%= link_to 'Subcategories', categories_path(category_id: category) %></td>
        <% else %>
        <td>---</td>
        <% end %>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path(category_id: @parent) %>
